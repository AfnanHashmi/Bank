<Window x:Class="Bank.Transaction_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Transaction window" Height="249" Width="584">
   <StackPanel Margin="180 50 ">
        <TextBlock Text="Enter amount"/>
        <TextBox x:Name="amount" Margin="0 10 0 10"/>
        <Button x:Name="Button" Height="30" Width="80" Click="Button_Click"/>

    </StackPanel>
</Window>
